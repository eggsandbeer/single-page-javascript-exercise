<div class="accordion-heading">
    <a class="accordion-toggle" data-toggle="collapse" data-parent="#MEOverViewAccordion" href="#LanguagesAccordion">
        <h4>
            <i class="accordion-indicator"></i>
            Languages
        </h4>
    </a>
</div>
<div id="LanguagesAccordion" class="accordion-body collapse in">
    <div class="accordion-inner">
        <div id="languages" class="row-fluid">
            <div class="span12">
                <div class="control-group">
                    <p>

                        <strong>Enabled languages: </strong>
                        <span id="Enabled">
                        {{#each languages}}
                            {{#if selected}}
                                {{label}},
                            {{/if}}
                        {{/each}}
                        </span>
                    </p>
                </div>
            </div>
        </div>
        <button class="btn btn-primary clear-fix js-overview-modal">Manage Languages</button>
    </div>
</div>
