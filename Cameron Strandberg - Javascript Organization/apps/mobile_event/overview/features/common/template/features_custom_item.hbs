<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h2>{{title}}</h2>
    {{#if subtitle}}
    <p>{{subtitle}}</p>
    {{/if}}
</div>
<div class="modal-body">
    <form>
        <div id="{{parentId}}" class="content">
            {{#if nofeatures}}
            <div class="alert alert-info">
                {{nofeatures}}
            </div>
            {{/if}}
            {{#each units}}
            <div class="feature-container">
                <label class="checkbox">
                    <input type="checkbox" name="[units][{{@key}}]" {{#if configured}}checked{{/if}}>{{name}}
                </label>
            </div>
            {{/each}}
        </div>
    </form>
</div>
<div class="modal-footer">
    <a href="#" class="pull-left btn btn-primary-qs js-submit {{#if nofeatures}}disabled{{/if}}">Save changes</a>
    <a href="#" class="pull-left btn btn-link">Close</a>
</div>
